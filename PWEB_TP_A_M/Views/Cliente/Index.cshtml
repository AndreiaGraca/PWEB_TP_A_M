@model IEnumerable<PWEB_TP_A_M.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<a class="text-black">
    <h3>Clientes</h3>
</a>
<p>
    <a asp-action="Create" style="color:cyan-black">Criar novo cliente</a>
</p>
<table class="table table-bordered">
    <thead class="border-1 table-bordered text-black-50" style="background-color:#98bac6">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAgendamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BI)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NIF)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Agendamento.TipoAgendamentoNo)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
