@model IEnumerable<PWEB_TP_A_M.Models.Agendamento>

@{
    ViewData["Title"] = "Index";
}


<a class="text-black">
    <h3>Agendamentos</h3>
</a>
<p>
    <a asp-action="Create" style="color:cyan-black">Criar novo agendamento</a>
</p>

<div class="dropdown float-lg-right">
    <button type="button" class="btn btn-secondary dropdown-toggle border-0" id="dropdownMenuOffset" data-toggle="dropdown" style="background-color: #6399ab " aria-expanded="false">
        Onde estamos?
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
        <a class="dropdown-item">
            <form asp-controller="Agendamento" asp-action="Index" method="get" class="float-right">
                <b>Filtrar por tipo de teste:</b>

                <select name="Id" asp-items="ViewBag.TestesId"></select>

                <input type="submit" value="Filtrar" class="btn btn-sm btn-secondary" style="background-color: #6399ab" />

            </form>

        </a>


        <a class="dropdown-item">
            <form asp-controller="Agendamento" asp-action="Index" method="get" class="float-right">
                <b>Filtrar por tipo de Analise:</b>
                <select name="Id" asp-items="ViewBag.AnalisesId"></select>
                <input type="submit" value="Filtrar" class="btn btn-secondary btn-sm" style="background-color: #6399ab" />
            </form>

        </a>

        <a class="dropdown-item">
            <form asp-controller="Agendamento" asp-action="Index" method="get" class="float-right">
                <b>Filtrar por Laboratório:</b>
                <select name="Id" asp-items="ViewBag.CentroId"></select>
                <input type="submit" value="Filtrar" class="btn btn-secondary btn-sm" style="background-color: #6399ab" />
            </form>
        </a>
    </div>
</div>



