<table class="table table-bordered">

    <thead class="border-1 table-bordered text-black-50" style="background-color:#98bac6">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoAgendamentoNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Centros.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Testes.NomeTeste)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Analises.NomeAnalise)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoAgendamentoNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Centros.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Testes.NomeTeste)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnaliseId)
                </td>
                <td>

                    <div class="btn-group " role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle btn-sm" data-toggle="dropdown" aria-expanded="false" style="background-color: #6399ab">
                            Opções
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Detalhes Agendamento</a>
                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Apagar Agendamento</a>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
